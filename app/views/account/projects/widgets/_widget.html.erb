<% project = @project || @project %>
<% context ||= project %>
<% collection ||= :widgets %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: widget do %>
  <tr data-id="<%= widget.id %>">
    <%= render "shared/tables/checkbox", object: widget %>
    <td><%= render 'shared/attributes/text', attribute: :name, url: [:account, widget] %></td>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if can? :edit, widget %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, widget], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, widget %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, widget], method: :delete, data: { confirm: t('.buttons.confirmations.destroy', model_locales(widget)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>
